version: 1.7
type: install
id: opencart
name: OpenCart
logo: https://download.jelastic.com/public.php?service=files&t=fdfd68ab2a5a690033dc0ddce077d36c&download

categories:
- apps/e-commerce
- apps/sales-and-marketing
baseUrl: https://raw.githubusercontent.com/jelastic-jps/opencart/master/

onAfterChangeTopology:
  - if (${event.response.response.env.sslstate}): enableSSL
  - else: disableSSL

onAfterBindSSL: enableSSL
    
onAfterRemoveSSL: disableSSL

mixins:
 - configs/vers.yaml

globals:
  DB_PASS: "${fn.random}"
  ADMIN_PASS: "${user.appPassword}"
  
homepage: http://www.opencart.com
description: |
  OpenCart is an open source PHP-based online shopping cart system. A
  robust e-commerce solution for Internet merchants with the ability to create their
  own online business and participate in e-commerce at a minimal cost.  
  OpenCart is designed feature rich, easy to use, search engine friendly and with a visually
  appealing interface.

engine: php8.0
nodes:
- cloudlets: 8
  nodeType: apache2
- nodeType: mysql5
  cloudlets: 8

onInstall:
- deploy:
    archive: https://github.com/opencart/opencart/releases/download/${globals.version_opencart}/opencart-${globals.version_opencart}.zip
    name: OpenCart-${globals.version_opencart}.zip
    context: ROOT
- replaceInFile:
    nodeType: apache2
    path: "/etc/php.ini"
    replacements:
    - pattern: ".*extension=gd.so"
      replacement: extension=gd.so
- restartNodes [cp]
- prepareSqlDatabase:
    nodeGroup: sqldb
    loginCredentials:
      user: root
      password: "${nodes.sqldb.password}"
    newDatabaseName: opencart
    newDatabaseUser:
      name: opencart
      password: "${globals.DB_PASS}"
- cmd [cp]:
  - cd ${WEBROOT}/ROOT
  - unzip -o opencart-3.0.3.2.zip
  - cp -r upload/* .
  - php install/cli_install.php install --db_hostname ${nodes.sqldb.address} --db_username opencart --db_password ${globals.DB_PASS} --db_database opencart --db_driver mysqli --db_port 3306 --username admin --password ${globals.ADMIN_PASS} --email ${user.email} --http_server ${env.protocol}://${env.domain}/

actions:
  enableSSL:
    - cmd [cp]: |-
        echo "#Force https redirect
        RewriteCond %{HTTPS} !=on
        RewriteRule ^/?(checkout|account|admin) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
        RewriteCond %{HTTPS} !=off" >> /var/www/webroot/ROOT/.htaccess
        sed -i "s|define('HTTPS_SERVER', 'http:|define('HTTPS_SERVER', 'https:|g" ${WEBROOT}/ROOT/admin/config.php
        sed -i "s|define('HTTPS_CATALOG', 'http:|define('HTTPS_CATALOG', 'https:|g" ${WEBROOT}/ROOT/admin/config.php
        sed -i "s|define('HTTPS_SERVER', 'http:|define('HTTPS_SERVER', 'https:|g" ${WEBROOT}/ROOT/admin/config.php
        sed -i "s|define('HTTPS_SERVER', 'http:|define('HTTPS_SERVER', 'https:|g" ${WEBROOT}/ROOT/config.php
    - restartNodes [cp]
  
  disableSSL:
    - cmd [cp]: |-
        sed -i "s|RewriteRule ^/?(checkout\|account\|admin)|#RewriteRule ^/?(checkout\|account\|admin)|g" ${WEBROOT}/ROOT/.htaccess
        sed -i "s|define('HTTPS_SERVER', 'https:|define('HTTPS_SERVER', 'http:|g" ${WEBROOT}/ROOT/admin/config.php
        sed -i "s|define('HTTPS_CATALOG', 'https:|define('HTTPS_CATALOG', 'http:|g" ${WEBROOT}/ROOT/admin/config.php
        sed -i "s|define('HTTPS_SERVER', 'https:|define('HTTPS_SERVER', 'http:|g" ${WEBROOT}/ROOT/admin/config.php
        sed -i "s|define('HTTPS_SERVER', 'https:|define('HTTPS_SERVER', 'http:|g" ${WEBROOT}/ROOT/config.php
    - restartNodes [cp]

success: |
  Below you will find your admin panel link, adminname and password.  
  Admin URL: [${env.protocol}://${env.domain}/admin/](${env.protocol}://${env.domain}/admin/)  
  Admin name: admin  
  Password: ${globals.ADMIN_PASS}  
  To add custom domain name for your OpenCart installation follow the steps described in our [documentation](http://docs.jelastic.com/custom-domains)
